@{
  Layout = "_Layout";
}

@using Factory.ViewModels

@model RegisterViewModel

<h1>Create an Account</h1>
<hr />

<div class="card center">
  <div class="card-body">
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    <p>@Html.TextBoxFor(user=> user.Email)</p>

    @Html.LabelFor(user=> user.Password)
    <p>@Html.PasswordFor(user=> user.Password)</p>

    @Html.LabelFor(user=> user.ConfirmPassword)
     <p>@Html.PasswordFor(user=> user.ConfirmPassword)</p>

    <input type="submit" class="btn btn-dark" value="Register" />
}
  </div>
</div>
