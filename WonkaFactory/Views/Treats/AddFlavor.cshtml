@{
  Layout = "_Layout";
}

@model Factory.Models.Treat

<h2>Add a Treat</h2>

<h4>Add a Treat to a Flavor: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back", "Index")</p>